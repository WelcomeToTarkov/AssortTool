<Window x:Class="AssortEditor.AddChildWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Child Item" Height="200" Width="300" Background="{DynamicResource WindowBackgroundBrush}">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Tpl Label and TextBox -->
            <StackPanel Orientation="Horizontal">
                <Label Content="Tpl:" VerticalAlignment="Center" Width="80"/>
                <TextBox x:Name="TplTextBox" Width="200" Margin="10" Text="{Binding NewTpl}" />
            </StackPanel>

            <!-- SlotId Label and TextBox -->
            <StackPanel Orientation="Horizontal">
                <Label Content="SlotId:" VerticalAlignment="Center" Width="80"/>
                <TextBox x:Name="SlotIdTextBox" Width="200" Margin="10" Text="{Binding NewSlotId}" />
            </StackPanel>

            <!-- Add Button -->
            <Button Content="Add Child" Width="100" Margin="10" Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>